{
  "name": "DÃ©bobardeur",
  "description": "Remove French bullshit.",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "dbbd_extension.html",
    "default_icon": "dbbd_extension.png"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-64.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api-debobardeur.troal.me/"
  ],
  "externally_connectable": {
    "matches": ["https://api-debobardeur.troal.me/"]
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://mail.google.com/*",
        "https://stackoverflow.com/*"
      ]
    }
  ],
  "commands": {
    "run-debobardize": {
      "suggested_key": {
        "default": "Ctrl+E",
        "mac": "Command+E"
      },
      "description": "Run debobardize on the current page."
    }
  }
}